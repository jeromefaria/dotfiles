macro browser h '<change-dir><kill-line>..<enter>' "Go to parent folder"

macro index \Cr "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "mark all messages as read"
macro index A "<limit>all\n" "show all messages (undo limit)"

macro index,pager i1 '<sync-mailbox><enter-command>source $DOTFILES/mutt/accounts/1-personal.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jerome.faria@gmail.com"
macro index,pager i2 '<sync-mailbox><enter-command>source $DOTFILES/mutt/accounts/2-linkfire.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to jtf@linkfire.com"

