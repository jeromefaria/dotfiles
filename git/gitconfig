# vim: filetype=gitconfig

[user]
  name = Jerome Faria
  email = jerome.faria@gmail.com
[color]
  ui = true
[mergetool]
  keepBackup = true
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
[push]
  default = simple
[core]
  excludesfile = ~/.gitignore_global
  pager = diff-so-fancy | less --tabs=4 -RFX
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[github]
  user = jeromefaria
[pull]
  rebase = true
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFXS --pattern '^(Date|added|deleted|modified): '
[fetch]
  prune = true
[rebase]
  autostash = true
[diff]
  colorMoved = default
[commit]
  verbose = true

# Machine-specific overrides
# Create ~/.gitconfig.local for machine-specific settings (not tracked in git)
# Example use cases:
#   - Work email: [user] email = work@company.com
#   - Different signing key: [user] signingkey = ABCD1234
#   - Custom aliases: [alias] custom = !custom-script
[include]
  path = ~/.gitconfig.local
[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
